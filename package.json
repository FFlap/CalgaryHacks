{
  "name": "wxt-react-starter",
  "description": "manifest.json description",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:stable": "wxt --browser chrome",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:e2e-ext": "cross-env WXT_E2E=1 WXT_GOOGLE_FACT_CHECK_API_KEY=e2e-test-key npm run build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "test:e2e": "npm run build:e2e-ext && playwright test",
    "test:e2e:focus": "npm run build:e2e-ext && playwright test tests/e2e/highlight-focus.spec.ts",
    "test:e2e:evidence": "npm run build:e2e-ext && playwright test tests/e2e/evidence-panel.spec.ts",
    "test:e2e:foxnews": "npm run build:e2e-ext && playwright test tests/e2e/foxnews.spec.ts",
    "test:e2e:youtube": "npm run build:e2e-ext && playwright test tests/e2e/youtube-embedded.spec.ts tests/e2e/youtube-get-transcript.spec.ts",
    "test:e2e:youtube-live": "npm run build:e2e-ext && playwright test tests/e2e/youtube-live.spec.ts",
    "playwright:install": "playwright install chromium",
    "postinstall": "wxt prepare"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.564.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwind-merge": "^3.4.0",
    "youtube-transcript-plus": "^1.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@wxt-dev/module-react": "^1.1.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.6.1",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "wxt": "^0.20.17"
  }
}
